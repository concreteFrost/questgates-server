{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*":["config/*"],
      "@crypto/*":["crypto/*"],
      "@shared/*" : ["shared/*"],
      "@middlewares/*":["middlewares/*"],
      "@services/*":["services/*"],
      "@routes/*":["routes/*"]
    }
  },
  "include": ["src/**/*", "testClient"],
  "exclude": ["node_modules"]
}