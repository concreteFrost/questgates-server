generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  passHash String
}

model PolicyAuditorRequest {
  id                String   @id @default(uuid())
  received          DateTime @default(now())
  country           String
  operator          String
  operatorTicketId  String   @unique
  gameNameId        String
  clientId          String
  insurancePolicyId String
  policyRequestedAt DateTime
  bets              Json
}
